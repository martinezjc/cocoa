<% @page_title = "Usuarios | Registro" %>
<div class="Sign_Form">
	<h1>Registro de usuario</h1>

	<%= form_for :user, url: users_path do |f| %>
	  
	  <p>Usuario: <br>
      <%= f.text_field :username %>
	  </p>

	  <p>Contrase&ntilde;a: <br>
	  <%= f.text_field :password %></p>

	  <p>Nombre: <br>
	  <%= f.text_field :name %></p>

	  <p>Celular: <br>
	  <%= f.text_field :mobile %></p>

	  <p>Identificaci&oacute;n: <br>
	  <%= f.text_field :identification %></p>

	  <p>Direcci&oacute;n: <br>
	  <%= f.text_area :address %></p>

      <p>Correo: <br>
      <%= f.text_field :email %></p>

      <%= f.submit :Registrarse %> 
      <% end %>
       
      <% if @user.errors.any? %>
      <ul class="Signup_Errors">
      <% for message_error in @user.errors.full_messages %>
      	<li>* <%= message_error %> </li>
      <% end %>
      </ul>
      <% end %>
</div>